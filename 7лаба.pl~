выдать_сведения(человек(Фамилия,Имя,Отчество,Дата,Пол,Адрес,Номер,Серия,Статус,ИмяСупруга)):-
write(человек(Фамилия,Имя,Отчество,Дата,Пол,Адрес,Номер,Серия,Статус,ИмяСупруга)),
nl, fail.
выдать_сведения(_).

меню :- repeat, nl, nl, write(' МЕНЮ'), nl,
write('1. Щ'),nl,
write('2. Д'),nl,
write('3. С'),nl,
write('0. ВЫХОД'), nl, nl,
write('Введите номер пункта меню '), read(человек), обработать(человек).
обработать(0):-!.
обработать(Х):-пункт(Х),fail.

пункт(1):-nl,write('Список студентов:'), nl,выдать_сведения(_),!.

пункт(2):-new(CALC, dialog('Cpicok')),
    new(N1,text_item('',
                     message(@(prolog),
                          sv,N1))),
    send(CALC, append, N1),
    send(CALC, open).
sv(N1):- send(N1, selection, выдать_сведения(_)).


пункт(3):-nl,write('Заполните ведомость: '),nl,
write('Фамилия '),read(Фамилия),
write('Оценка по предмету 1 '),read(Оценка1),
write('Оценка по предмету 2 '),read(Оценка2),
write('Оценка по предмету 3 '),read(Оценка3),
assert(ведомость(Фамилия,Оценка1,Оценка2,Оценка3)),!.
пункт(_):-write('Неизвестная команда'),nl,!.
